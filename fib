#!./perl


sub fib
{
    use integer;
    ($_[0] < 2) ? $_[0] : &fib($_[0]-1) + &fib($_[0]-2);
}

sub myruntime
{
    local(@t) = times;          #  in seconds
    $t[0] + $t[1];
}

$x = (shift || 20);
print "Starting fib($x)\n";
$before = &myruntime;
$y = &fib($x);
$after = &myruntime;
printf("Done. Result $y in %g cpu seconds.\n", $after-$before);

